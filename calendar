<body>
    <div class="card">
        <div class="header">
            <div class="logo-container">
                <div class="teams-logo-icon"></div>
                <h2>Teams Meeting Scheduler</h2>
            </div>
        </div>
        
        <form id="meetingForm">
            <div>
                <label for="startDateTime">Meeting Start Date & Time:</label>
                <input type="text" id="startDateTime" class="flatpickr" placeholder="Select start date and time" required>
            </div>
            
            <div>
                <label for="duration">Meeting Duration:</label>
                <select id="duration">
                    <option value="30">30 minutes</option>
                    <option value="60" selected>1 hour</option>
                    <option value="90">1 hour 30 minutes</option>
                    <option value="120">2 hours</option>
                </select>
            </div>
            
            <div>
                <label for="subject">Subject:</label>
                <input type="text" id="subject" placeholder="e.g., Project Sync-up" required>
            </div>
            
            <button type="submit">
                Create Teams Meeting Invitation
            </button>
        </form>
    </div>

    <script>
        // Flatpickr initialization
        flatpickr("#startDateTime", {
            enableTime: true,
            dateFormat: "Y-m-d H:i",
            time_24hr: true,
            defaultHour: 9,
            minuteIncrement: 15
        });

        // Form Submission Logic
        document.getElementById('meetingForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const startDateTime = document.getElementById('startDateTime').value;
            const duration = document.getElementById('duration').value;
            const subject = document.getElementById('subject').value;
            
            const startDate = new Date(startDateTime);
            // Calculate end time
            const endDateTime = new Date(startDate.getTime() + (duration * 60 * 1000));
            
            // Format dates for the Teams URI: YYYYMMDDTHHMM
            const formatTeamsDate = (date) => {
                // Pad function to ensure two digits
                const pad = (num) => String(num).padStart(2, '0');
                
                return date.getFullYear() + 
                       pad(date.getMonth() + 1) + 
                       pad(date.getDate()) + 
                       'T' + 
                       pad(date.getHours()) + 
                       pad(date.getMinutes());
            };

            const formattedStart = formatTeamsDate(startDate);
            const formattedEnd = formatTeamsDate(endDateTime);
            
            // Create the ms-teams: URI
            const teamsUri = `https://teams.microsoft.com/l/meeting/new?subject=${encodeURIComponent(subject)}&startdatetime=${formattedStart}&enddatetime=${formattedEnd}`;
            
            window.open(teamsUri, '_blank');
        });
    </script>
